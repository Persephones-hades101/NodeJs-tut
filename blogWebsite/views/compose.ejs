<%- include("partials/header") -%>

  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label  style="font-size:large;">Title</label>
      <input class="form-control" type="text" name="postTitle">
    </div>

    <div class="form-group">
      <label  style="font-size:large;">Post</label>
      <textarea class="form-control" name="postContent" rows="7"></textarea>
    </div>
    <button type="submit" name="button" class=" btn btn-primary">Publish</button>
  </form>

  <%- include("partials/footer") -%>